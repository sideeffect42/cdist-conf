#!/bin/sh -e

os=$(cat "${__global:?}/explorer/os")

src="/${__object_id:?}"

case ${src}
in
    (*.7z)
        __package p7zip
    ;;
    (*.bz2|*.tbz2)
        case ${os}
        in
            (freebsd)
                # bzip2 is part of FreeBSD base system
            ;;
            (*)
                __package bzip2
            ;;
        esac
    ;;
    (*.lzma|*.xz|*.txz)
        case ${os}
        in
            (debian|ubuntu|devuan)
                __package xz-utils
            ;;
            (alpine|centos|almalinux|eurolinux|rocky)
                __package xz
            ;;
        esac
    ;;
    (*.rar)
        case ${os}
        in
            (debian|ubuntu|devuan|alpine|freebsd)
                __package unrar
            ;;
        esac
    ;;
    (*.zip)
        __package unzip
    ;;
esac
